{
  "name": "glocal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:html": "markuplint \"**/*.{jsx,tsx}\"",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css,scss}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{tsx,jsx,html}": [
      "eslint --fix",
      "markuplint",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.0",
    "@mantine/carousel": "^8.3.10",
    "@mantine/core": "^8.3.10",
    "@mantine/form": "^8.3.10",
    "@mantine/hooks": "^8.3.10",
    "@next/third-parties": "^16.0.10",
    "@tabler/icons-react": "^3.1.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "10.4.14",
    "core-js": "^3.37.0",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "next": "^16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "swr": "^2.3.7",
    "tailwindcss": "3.3.2",
    "typescript": "^5.9.3"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-preset-mantine": {},
      "postcss-simple-vars": {
        "variables": {
          "mantine-breakpoint-lg": "75em",
          "mantine-breakpoint-md": "62em",
          "mantine-breakpoint-sm": "48em",
          "mantine-breakpoint-xl": "88em",
          "mantine-breakpoint-xs": "36em"
        }
      },
      "tailwindcss": {}
    }
  },
  "devDependencies": {
    "@markuplint/jsx-parser": "^3.9.0",
    "@markuplint/react-spec": "^3.10.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "markuplint": "^3.12.0",
    "postcss": "^8.4.37",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0"
  }
}
