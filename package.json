{
  "name": "glocal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --ignore-path .gitignore",
    "lint:fix": "next lint --ignore-path .gitignore --fix",
    "lint:html": "markuplint \"**/*.{jsx,tsx}\"",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css,scss}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{tsx,jsx,html}": [
      "eslint --fix",
      "markuplint",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.0",
    "@mantine/carousel": "^7.8.1",
    "@mantine/core": "^7.6.2",
    "@mantine/form": "^7.6.2",
    "@mantine/hooks": "^7.6.2",
    "@next/third-parties": "^14.2.3",
    "@tabler/icons-react": "^3.1.0",
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "core-js": "^3.37.0",
    "embla-carousel-react": "^7.1.0",
    "eslint": "8.41.0",
    "eslint-config-next": "^14.2.3",
    "next": "^14.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.2.5",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-preset-mantine": {},
      "postcss-simple-vars": {
        "variables": {
          "mantine-breakpoint-lg": "75em",
          "mantine-breakpoint-md": "62em",
          "mantine-breakpoint-sm": "48em",
          "mantine-breakpoint-xl": "88em",
          "mantine-breakpoint-xs": "36em"
        }
      },
      "tailwindcss": {}
    }
  },
  "devDependencies": {
    "@markuplint/jsx-parser": "^3.9.0",
    "@markuplint/react-spec": "^3.10.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "markuplint": "^3.12.0",
    "postcss": "^8.4.37",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0"
  }
}
